<div class="col-md-12">
  <!-- <div class="group"> -->
  <%= link_to("New Collection", new_collection_path, class: "btn btn-primary pull-right") %>
  <!-- </div> -->

    <table class="table table-hover" style="width:700px;">
      <thead>
        <tr>
          <td>
            Title
          </td>
          <td>
            Content
          </td>
          <td>
            Price
          </td>
        </tr>
      </thead>
      <tbody>
        <% @collections.each do |collection| %>
          <tr>
            <td><%= collection.title %></td>
            <td><%= collection.content %></td>
            <td><%= collection.price %></td>
            <td>
              <%= link_to("Edit", edit_collection_path(collection), class: "btn btn-primary btn-sm") %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>


</div>
